---

export interface Prop{
    title: string
    description: string
    link?: string
    date: string
    tecnologias: any
    project: any
}

const { date, title, description, tecnologias, project} = Astro.props

---


<li class="mb-14">
    <div class="flex flex-row gap-x-3">
        <div class="w-3 h-3 bg-[#44bd2e] rounded-full border border-white dark:border-gray-900 dark:bg-gray-700"></div>
        <time class="mb-1 text-sm font-normal leading-none text-white dark:text-white">{date}</time>
    </div>
    <div class="md:ml-6">
        <h3 class="text-base md:text-lg font-semibold text-gray-400 dark:text-white mt-4">{title}</h3>
        <p class="mt-2 mb-6 text-sm md:text-base font-normal text-white dark:text-gray-400">{description}</p>
        <p class="mt-2 mb-6 text-sm md:text-base font-normal text-white dark:text-gray-400"><ul>{project?.map((proj: { nameProject: any })=>( <proj.nameProject />))}</ul></p>
        <h3 class="text-xs md:text-sm font-semibold text-gray-400 mb-4">TECNOLOG√çAS</h3>
        <ul class="flex">
            {tecnologias?.map((tecno: { icono: any }) => (
                <li class="mr-2 md:mr-4" >
                    <tecno.icono class="size-5 md:size-6"/>
                </li>
            ))}
        </ul>
    </div>
</li>
